<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.esy.gengod.allapplications.MainActivity">

    <GridLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/plusOneButton"
            style="@android:style/Widget.Material.Light.Button.Toggle"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="#00ff0f"
            android:elevation="0dp"
            android:text="1 - 8" />

        <Button
            android:id="@+id/minusOneButton"
            style="@android:style/Widget.Material.Light.Button.Toggle"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:background="#00b"
            android:text="4 - 7" />

        <TextView
            android:id="@+id/numbersTextView"
            android:layout_width="96dp"
            android:layout_height="74dp"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info"
            android:visibility="visible" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
